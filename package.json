{
  "name": "slagg",
  "version": "1.0.0",
  "description": "Slack Aggregator CLI - Aggregate messages from multiple Slack teams into a unified timeline",
  "type": "module",
  "main": "src/main.js",
  "bin": {
    "slagg": "./src/main.js"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "start": "node src/main.js",
    "test": "npm run check && vitest run",
    "test:watch": "vitest",
    "lint": "biome lint src/",
    "format": "biome format --write src/",
    "check": "biome check src/"
  },
  "keywords": [
    "slack",
    "cli",
    "aggregator",
    "realtime",
    "socket"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@slack/socket-mode": "^2.0.0",
    "@slack/web-api": "^7.0.0",
    "chalk": "^5.3.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.0",
    "vitest": "^1.0.0"
  }
}
